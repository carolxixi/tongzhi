#body{
    background-color: white;
    font-family: "Helvetica Neue",'Microsoft Yi Baiti' ,'Open Sans', 'Helvetica Neue', Arial, 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
    box-sizing:border-box;
    -moz-box-sizing:border-box; /* Firefox */
    -webkit-box-sizing:border-box; /* Safari */
}
#body{
    margin-top: 0em 
}
#gn-wrap{
    padding: 1.5em 1em 0em 1em;
}
.gn-kuai{
    float: left;
    width:6.5em;
    padding: 2em;
    border-radius:0.5em;
    background:  #f5f5f5;
    margin-bottom: 1em ;
    transition: all 0.2s ease;
}
.clear::after{
    clear: both;
}
.gn-kuai:nth-of-type(odd){
    margin-right:6%; 
}
.gn-kuai:focus,
.gn-kuai:hover{
  transform: scale(0.9,0.9)
}
